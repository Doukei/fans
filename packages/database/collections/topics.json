{
    "$schema": "https://bytegem.github.io/schemas/tcb-database.json#",
    "collectionName": "topics",
    "description": "话题集合",
    "aclTag": "ADMINWRITE",
    "createIndexes": [
        {
            "name": "creatorIdIndex",
            "unique": false,
            "keys": [
                {
                    "name": "creatorId",
                    "direction": "1"
                }
            ]
        },
        {
            "name": "joinTypeIndex",
            "unique": false,
            "keys": [
                {
                    "name": "joinType",
                    "direction": "1"
                }
            ]
        },
        {
            "name": "postTypeIndex",
            "unique": false,
            "keys": [
                {
                    "name": "postType",
                    "direction": "1"
                }
            ]
        },
        {
            "name": "NameIndex",
            "unique": true,
            "keys": [
                {
                    "name": "name",
                    "direction": "1"
                }
            ]
        },
        {
            "name": "createdAtIndex",
            "unique": false,
            "keys": [
                {
                    "name": "createdAt",
                    "direction": "-1"
                }
            ]
        }
    ]
}