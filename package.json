{
  "name": "@bytegem/fans",
  "version": "0.0.1-1",
  "private": true,
  "languageName": "node",
  "scripts": {
    "app:intl": "./intl.sh",
    "build:app-models": "flutter pub run build_runner",
    "build:app-launcher-icons": "flutter pub run flutter_launcher_icons:main",
    "build:functions": "yarn workspaces foreach --exclude database run build",
    "build:version": "yarn workspaces foreach version ${0}-${1} && node scripts/change-flutter-app-version.js $0 $1",
    "deploy:functions": "yarn build:functions && cloudbase functions:deploy",
    "deploy:cloudbase": "yarn build:functions && cloudbase framework:deploy"
  },
  "devDependencies": {
    "@cloudbase/cli": "^0.9.4",
    "@types/node": "^14.0.27",
    "app-api": "workspace:cloudbase/functions/app-api",
    "database": "workspace:cloudbase/database",
    "typescript": "^3.9.7"
  },
  "workspaces": [
    "cloudbase/database",
    "cloudbase/functions/*"
  ]
}
